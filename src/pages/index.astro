---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<style>
  /* Animación de movimiento lento para los fondos */
  @keyframes float-slow {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -50px) rotate(5deg); }
    66% { transform: translate(-20px, 20px) rotate(-5deg); }
  }
  .animate-float-slow {
    animation: float-slow 20s infinite ease-in-out alternate;
  }

  /* Animación de "respiración" para la forma de la imagen */
  @keyframes morph-blob {
    0%, 100% { border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%; }
    50% { border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%; }
  }
  .animate-morph {
    animation: morph-blob 8s infinite ease-in-out alternate;
  }

  /* Gradiente metálico para el texto destacado */
  .text-gradient-accent {
    background: linear-gradient(135deg, var(--color-accent), #EDA990);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>

<Layout title="Diodati & Asociados | Abogada Profesional">
  <Navbar />

  <main>
    
    <section id="inicio" class="relative min-h-screen flex items-center pt-32 pb-16 lg:pt-40 lg:pb-32 overflow-hidden bg-[radial-gradient(ellipse_at_top_left,_var(--color-primary)_0%,_#2A283E_100%)] w-full max-w-[100vw]">
      
      <div class="absolute inset-0 pointer-events-none overflow-hidden">
        <div class="absolute top-[-10%] left-[-20%] md:left-[-10%] w-[300px] h-[300px] md:w-[800px] md:h-[800px] bg-[#5A5675] rounded-full blur-[80px] md:blur-[120px] opacity-40 animate-float-slow" style="animation-delay: 0s;"></div>
        <div class="absolute bottom-[-10%] right-[-20%] md:right-[-10%] w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-[var(--color-accent)] rounded-full blur-[100px] md:blur-[150px] opacity-30 animate-float-slow" style="animation-delay: -5s;"></div>
      </div>
      
